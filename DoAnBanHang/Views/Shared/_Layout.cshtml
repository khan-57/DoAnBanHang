<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/200d9ab894.js" crossorigin="anonymous"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
          integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous" />
    <link href="~/Content/Assets/c3/c3.css" rel="stylesheet" />
    <link href="~/Content/Assets/notify/css/BrightTheme.css" rel="stylesheet" />
    <link href="~/Content/Assets/notify/css/PNotify.css" rel="stylesheet" />
    <link href="~/Content/Assets/notify/css/PNotifyBootstrap3.css" rel="stylesheet" />
    <link href="~/Content/Assets/notify/css/PNotifyConfirm.css" rel="stylesheet" />
    <script src="~/Content/Assets/notify/js/PNotify.js"></script>
    <script src="~/Content/Assets/notify/js/PNotifyBootstrap3.js"></script>
    <script src="~/Content/Assets/notify/js/PNotifyConfirm.js"></script>

    <link href="~/Content/Assets/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Assets/plugins/select2/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF"
            crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
</head>

@*@if (tk == null)
{
    Response.Redirect("~/TrangChu/TrangChu");
    
}*@
<body>
    <header>
        <div class="header-container">
            <div class="header-right">

                @using (Html.BeginForm("Search", "TrangChu", FormMethod.Get, new { @class = " form-inline" }))
                {
                    <div class="col">
                        <div class="form-search" style="margin-right: 30px;">
                            <input class="search-bar" type="search" placeholder="Tìm kiếm" name="search" />

                            <button type="submit">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>

                        </div>
                    </div>
                }
                @*<label>@tk.</label>*@
            <session>
                @if (tk != null)
                {
                    <div>
                        <div>
                            <button type="submit" class="btn-thongtin" id="btnThongTin">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <i class="fa-solid fa-circle-user"></i>
                                    </div>
                                    <div class="col-sm-8">
                                        <b>@tk.Username</b>
                                    </div>
                                </div>
                            </button>

                        </div>
                        <div id="khungThongTin" style="border:solid 1px black;width:200px;height:100px;display:none">
                            <div style="height:30px;width:100%;text-align:center;text-decoration:none;margin-top:10px">
                                <a href="@Url.Action("ThongTinKhach","Account",new { id=tk.ID_TK})" style="color:black;">Thông tin khách</a>
                            </div>
                            <hr />
                            <div style="margin-left:10px">
                                <a href="/Account/DoiMatKhau"><button>Đổi mật khẩu</button></a>

                                <a href="@Url.Action("DangNhap","Account")"><button>Đăng xuất</button></a>
                            </div>

                            @*<button type="submit" class="btn-thongtin" id="btnHuy">Hủy</button>*@
                        </div>
                    </div>
                 }
                else
                {
                    <div>
                        <div >
                            <button type="submit" class="btn-purchase" style="width:auto" id="btnThongTin" >
                                <a href="@Url.Action("DangNhap","Account")" style="color:white;">
                                    <div class="row">
                                            <b>Đăng Nhập</b>
                                    </div>
                                </a>
                            </button>

                        </div>
                       
                     </div>
                   
                }
            </session>
                @*<a href="~/Cart/Cart"><i class="fa-solid fa-cart-shopping"></i></a>*@
                <div class="ml-auto">
                    @Html.Action("GioHangPartial", "Cart")
                </div>
            </div>
        </div>
        <div class="header-container" id="navBar">
            <nav class="menu">
                <ul>
                    <li>
                        @*<a href="~/TrangChu/TrangChu">Trang chủ</a>*@
                        @*@Html.ActionLink("Trang Chủ", "TrangChu");*@
                        <a href="@Url.Action("TrangChu", "TrangChu")">Trang Chủ</a>
                    </li>
                    <li>
                        <a href="#">Sản phẩm</a>
                        <ul class="drop-menu">
                            <li><a href="~/Product/Quan">Quần</a></li>
                            <li><a href="~/Product/Ao">Áo</a></li>
                            <li><a href="~/Product/Giay">Giày</a></li>
                            <li><a href="~/Product/Nam">Nam</a></li>
                            <li><a href="~/Product/Nu">Nữ</a></li>
                        </ul>
                    </li>
                    <li><a href="~/Product/NewProducts">Sản phẩm mới</a></li>
                    <li><a href="#">Sale off</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <script language="javascript">
        var thongtin = document.getElementById("btnThongTin");
        var nar = document.getElementById("navBar");
        document.getElementById("btnThongTin").onclick = function openKhung() {
            var open = document.getElementById("khungThongTin");
            if (open.style.display === 'none') {
                thongtin.style.marginTop = "110px"
                open.style.display = 'block';
                nar.style.marginTop = "100px";
                thongtin.style.width = "200px";
            }
            else {
                thongtin.style.marginTop = "0px"
                open.style.display = 'none';
                nar.style.marginTop = "0px";
            }
        }

    </script>
    <div class="container body-content">
         @RenderBody()
        <hr />
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6 footer-information ">
                    <h3>Contact Us</h3>
                    <span><a href="#"><i class="fa-brands fa-facebook-square"></i></a></span>
                    <span><a href="#"><i class="fa-brands fa-instagram"></i></a></span>
                    <p>E-mail: abc@gmail.com</p>
                </div>
                <div class="col-md-6 footer-information ">
                    <h3>Hệ thống cửa hàng</h3>
                </div>
            </div>
        </div>
    </footer>
</body>
<script src="~/Scripts/app.js"></script>
</html>
